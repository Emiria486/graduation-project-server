{
    "compilerOptions": {
        "downlevelIteration": true,
        "outDir": "./build",
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    }
}